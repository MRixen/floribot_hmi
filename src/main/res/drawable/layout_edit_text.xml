<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/shape_one">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/ModernBlue" />
            <solid android:color="@color/ModernBlue" />
        </shape>
    </item>
    <item android:id="@+id/shape_two"
        android:bottom="3dp"
        android:top="2dp">
    <shape android:shape="rectangle">
        <!--Set margin left and right for the beam.-->
        <stroke
            android:width="4dp"
            android:color="@color/ModernBlue" />
        <solid android:color="#ffffff" />
    </shape>
</item>
    <!--Set beam height. Need to be stroke width (from above) +4!-->
    <item android:id="@+id/shape_three"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/ModernBlue" />
            <solid android:color="@color/ModernBlue" />
        </shape>
    </item>
</layer-list>