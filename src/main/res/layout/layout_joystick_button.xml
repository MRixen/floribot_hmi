<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/seek_bar_speed"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="10"
        android:layout_marginTop="@dimen/seekBarMarginTop"
        android:secondaryProgress="0"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_thumb"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:id="@+id/joystick_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/seek_bar_speed">
    </RelativeLayout>

    <Button
        android:id="@+id/button_right"
        android:layout_marginRight="-5dp"
        android:layout_alignRight="@id/joystick_buttons"
        android:layout_alignTop="@id/joystick_buttons"
        android:layout_marginTop="38dp"
        android:layout_width="45dp"
        android:background="@android:color/transparent"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/button_left"
        android:layout_alignTop="@id/joystick_buttons"
        android:layout_alignLeft="@id/joystick_buttons"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:layout_width="45dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/button_up"
        android:layout_alignTop="@id/joystick_buttons"
        android:layout_alignLeft="@id/joystick_buttons"
        android:layout_marginLeft="35dp"
        android:layout_width="60dp"
        android:background="@android:color/transparent"
        android:layout_height="45dp" />

    <Button
        android:id="@+id/button_down"
        android:layout_alignBottom="@id/joystick_buttons"
        android:layout_marginBottom="-5dp"
        android:layout_alignLeft="@id/joystick_buttons"
        android:layout_marginLeft="35dp"
        android:layout_width="60dp"
        android:background="@android:color/transparent"
        android:layout_height="45dp"
        android:paddingRight="30dp" />

    <Button
        android:id="@+id/button_sensor"
        android:layout_marginLeft="43dp"
        android:layout_alignTop="@id/joystick_buttons"
        android:layout_alignLeft="@id/joystick_buttons"
        android:layout_marginTop="45dp"
        android:layout_width="45dp"
        android:background="@android:color/transparent"
        android:layout_height="45dp" />



</RelativeLayout>